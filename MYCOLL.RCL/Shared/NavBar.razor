@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
<div class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
            <a class="navbar-brand" href="#">
                Mycoll
            </a>
            <div class="d-flex w-100">
                <!-- Left-aligned section -->
                <div class="d-flex justify-content-center flex-grow-1">
                    <AuthorizeView Roles="Funcionario">
                        <Authorized>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="/produtos">
                                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Produto
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                    <AuthorizeView>
                        <Authorized>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="#">
                                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Carrinho
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>

                <!-- Right-aligned section (pushed to far right) -->
                <div class="ms-auto d-flex">
                    <AuthorizeView>
                        <Authorized>
                            <!-- Black email -->
                            <NavLink class="nav-link text-black" href="Account/Manage">
                                <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                            </NavLink>

                            <!-- Red logout button -->
                            <form action="Account/Logout" method="post">
                                <AntiforgeryToken />
                                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                <button type="submit" class="nav-link text-danger">
                                    <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                                </button>
                            </form>
                        </Authorized>
                        <NotAuthorized>
                            <div class="nav-item px-3">
                                <NavLink class="nav-link" href="/Account/RegisterClient">
                                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                                </NavLink>
                            </div>

                            <NavLink class="nav-link" href="/Account/Login">
                                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                            </NavLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
    
</div>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
    
}
