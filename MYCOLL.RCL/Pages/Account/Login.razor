@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using MYCOLL.RCL.Data.DTO
@using MYCOLL.RCL.Services
@using Microsoft.AspNetCore.Components.Authorization

@inject NavigationManager NavigationManager
@inject AuthenticacaoService AuthenticacaoService

<PageTitle>Log in</PageTitle>

<h1>Log in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <!-- Removemos o method="post" e FormName, usamos OnValidSubmit padrão do Blazor -->
            <EditForm Model="Input" OnValidSubmit="LoginUser">
                <DataAnnotationsValidator />
                <h2>Use a local account to log in.</h2>
                <hr />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="form-floating mb-3">
                    <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label for="email" class="form-label">Email</label>
                    <ValidationMessage For="() => Input.Email" class="text-danger" />
                </div>

                <div class="form-floating mb-3">
                    <InputText type="password" @bind-Value="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label for="password" class="form-label">Password</label>
                    <ValidationMessage For="() => Input.Password" class="text-danger" />
                </div>

                <!-- Checkbox visual apenas, lógica de "Remember Me" depende do token storage -->
                <div class="checkbox mb-3">
                    <label class="form-label">
                        <InputCheckbox @bind-Value="Input.RememberMe" class="form-check-input" />
                        Remember me
                    </label>
                </div>

                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="mt-2">
                    <p>
                        <a href="Account/RegisterClient">Register as a new user</a>
                    </p>
                </div>
            </EditForm>
        </section>
    </div>
</div>

@code {
    private string? errorMessage;

    // Modelo simples instanciado diretamente
    private InputModel Input { get; set; } = new();

    // Em Blazor Client, params da Query String vêm assim:
    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Limpa sessão antiga ao entrar na página de login
        await AuthenticacaoService.Logout();
    }

    public async Task LoginUser()
    {
        try
        {
            // Chama o teu serviço que já está correto
            var results = await AuthenticacaoService.Login(Input.Email, Input.Password);

            if (results.Success)
            {

                // Redireciona para a Home ou ReturnUrl
                NavigationManager.NavigateTo(ReturnUrl ?? "/home");
            }
            else
            {
                errorMessage = results.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    // Classe auxiliar para o formulário
    public class InputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";

        [Required]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}