@page "/subcategoria/delete"
@using Microsoft.EntityFrameworkCore
@using MYCOLL.Entities
@inject IDbContextFactory<MYCOLL.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>SubCategoria</h2>
    <hr />
    @if (subcategoria is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@subcategoria.Nome</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Ativo</dt>
            <dd class="col-sm-10">@subcategoria.Ativo</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CategoriaId</dt>
            <dd class="col-sm-10">@subcategoria.CategoriaId</dd>
        </dl>
        <EditForm method="post" Model="subcategoria" OnValidSubmit="DeleteSubCategoria" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(subcategoria is null)">Delete</button> |
            <a href="/subcategoria">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private SubCategoria? subcategoria;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        subcategoria = await context.SubCategorias.FirstOrDefaultAsync(m => m.Id == Id);

        if (subcategoria is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSubCategoria()
    {
        using var context = DbFactory.CreateDbContext();
        context.SubCategorias.Remove(subcategoria!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/subcategoria");
    }
}
