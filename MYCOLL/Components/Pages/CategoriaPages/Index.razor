@page "/categoria"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using MYCOLL.Entities
@using MYCOLL.Data
@using MYCOLL.Services
@inject IDbContextFactory<MYCOLL.Data.ApplicationDbContext> DbFactory
@inject CategoriaService CategoriaService

@attribute [Authorize(Roles="Admin, Funcionario")]

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="categoria/create">Create New</a>
</p>

<QuickGrid Class="table" Items="@categorias.AsQueryable()">
    <PropertyColumn Property="categoria => categoria.Nome" />
    <PropertyColumn Property="categoria => categoria.Ativo" />

    <TemplateColumn Context="categoria">
        <a href="@($"categoria/edit?id={categoria.Id}")">Edit</a> |
        <a href="@($"categoria/details?id={categoria.Id}")">Details</a> |
        <a href="@($"categoria/delete?id={categoria.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    //private ApplicationDbContext context = default!;

    IEnumerable<Categoria> categorias = Enumerable.Empty<Categoria>();

    protected override async Task OnInitializedAsync()
    {
		categorias = await CategoriaService.GetCategorias();
    }
    //public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
